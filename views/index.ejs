<script>
  // Function to fetch YouTube data based on search query
async function searchYouTube(query) {
  const apiKey = 'AIzaSyDQh5o52I40EFz7GAMADbfHQuhhVrFlgTc'; // Replace with your YouTube API key
  const maxResults = 5; // Maximum number of results to display

  const response = await fetch(`https://www.googleapis.com/youtube/v3/search?q=${query}&key=${apiKey}&part=snippet&type=video&maxResults=${maxResults}`);
  const data = await response.json();

  return data.items;
}

// Function to display search results
function displaySearchResults(results) {
  const searchResultsDiv = document.getElementById('searchResults');
  searchResultsDiv.innerHTML = ''; // Clear previous results

  results.forEach(result => {
    const videoId = result.id.videoId;
    const videoTitle = result.snippet.title;
    const videoThumbnail = result.snippet.thumbnails.default.url;

    const videoElement = `
      <div class="card mb-3 rounded-4" style="background-color: hsl(220, 100%, 90%);">
        <div class="row g-0 p-2 align-items-center">
          <div class="col-md-4">
            <img src="${videoThumbnail}" class="img-fluid rounded-4" alt="Thumbnail">
          </div>
          <div class="col-md-8">
            <div class="card-body">
              <h5 class="card-title">${videoTitle}</h5>
			  <a href="https://www.youtube.com/watch?v=${videoId}" class="btn rounded-pill px-3 py-1 btn-outline-primary" target="_blank">Watch  <i class="bi bi-youtube"></i></a>
			  <a href="/download/${videoId}" class="btn rounded-pill px-3 py-1 btn-outline-primary" download>Download  <i class="bi bi-cloud-arrow-down-fill"></i></a>
            </div>
          </div>
        </div>
      </div>
    `;

    searchResultsDiv.innerHTML += videoElement;
  });
}

// Event listener for search input
document.getElementById('searchInput').addEventListener('input', async function() {
  const searchQuery = this.value.trim();

  if (searchQuery !== '') {
    const results = await searchYouTube(searchQuery);
    displaySearchResults(results);
  }
});

</script>

